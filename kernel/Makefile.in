SRCDIR        = @SRCDIR@
INCDIR        = @INCDIR@
BUILDDIR      = @BUILDDIR@
LIBDIR        = @LIBDIR@

CC            = @CC@
AS            = @AS@
AR            = @AR@
RANLIB        = @RANLIB@
CFLAGS        = @CFLAGS@
ASFLAGS       = @ASFLAGS@
LDFLAGS       = @LDFLAGS@

# =====================
# Directorios de origen
# =====================
KERNEL_SRC    = $(SRCDIR)/kernel
DRIVERS_SRC   = $(SRCDIR)/drivers
ARCH_SRC      = $(SRCDIR)/arch
DOOM_SRC      = $(SRCDIR)/../doomgeneric/doomgeneric

# =====================
# Directorios de build
# =====================
